<%= simple_form_for([@task, @subtask]) do |f| %>
  <%= f.input :activity, label: false, placeholder: "What is the subtask", input_html: { class: 'bg-white fw-light rounded-5 px-4'} %>
  <%= f.input :priority, input_html: { class: 'bg-white fw-light rounded-5 px-4'} %>
  <%= f.input :due_date, label: false, placeholder: "When is it due?",input_html: { class: 'bg-white fw-light rounded-5 px-4', data: { controller: "datepicker" } } %>
  <div class="m-2 align-self-center">
    <%= f.submit value: 'Apply', class: 'btn btn-primary px-3 rounded-5' %>
  </div>
  <div class="m-2">
    <%= link_to url_for(:back), class: 'btn font-skyblue px-2' do %>
      <i class="fa-solid fa-chevron-left">&nbsp back</i>
    <% end %>
  </div>
<% end %>
