<div class="container container-fix d-flex">
  <div class="mt-3 mb-5 mx-3 white-background d-flex w-100 flex-column height-min">
    <h1 class="title-h1 text-center">To-do</h1>
    <div class="form-container">
      <%= simple_form_for(@task, url: create_without_plan_path, method: :post) do |f| %>
        <%= f.input :plan_id, label: 'Select the plan from your todo', collection: Plan.where( user: current_user), input_html: { class: 'input-placeholder-nopad', style:'height:34px!important;'} %>
        <%= f.input :activity, label: false, placeholder: "What is the task?", input_html: { class: 'fw-bold input-placeholder'} %>
        <%= f.input :priority,
            as: :radio_buttons,
            collection_wrapper_tag: 'div',
            collection_wrapper_class: 'priority-wrapper',
            item_wrapper_class: 'priority-item',
            input_html: {class: 'priority-selector'},
            collection: Task::PRIORITIES %>
        <%= f.input :due_date, as: :string, label: 'Pick a due date:', input_html: { class: 'input-placeholder',
            data: { controller: "flatpickr-special" } } %>
        <div class="mt-4 d-flex flex-row justify-content-around">
          <%= link_to url_for(:back), class: 'btn btn-red' do %>
            cancel
          <% end %>
          <%= f.submit value: 'Apply', class: 'btn btn-blue' %>
        </div>

      <% end %>
    </div>
  </div>
</div>
