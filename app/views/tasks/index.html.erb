<div class="container d-flex">
  <div class="mt-3 mb-5 mx-3 white-background">
    <h1 class="mb-3 mb-3 title-h1">To-do list</h1>

    <div class="row">

          <%= link_to new_without_plan_path, class: 'btn tasks d-flex align-items-between align-items-center pb-4 my-3' do %>
            <%= image_tag "add.svg", class: "add-h3 me-3" %>
            <div class=" me-3 new-task"></div>
            <bdi type="button" data-bs-toggle="collapse"  role="button" aria-expanded="false">new task</bdi>
          <% end %>

      <div class="d-flex justify-content-between">
        <div class="">
          <h3 class="title-h3 mb-5"><%= image_tag "arrow.svg", class: "arrow-h3" %>Last added</h3>
          <% @tasks.each do |task|  %>
              <%= render 'tasks/task', task: task %>
          <% end %>
        </div>
        <div class=" vertical-grey ps-5 ms-3 ">
          <h3 class="title-h3 mb-5"><%= image_tag "arrow.svg", class: "arrow-h3" %>By priority</h3>
          <% @tasks.order(:priority).reverse.each do |task|  %>
            <%= render 'tasks/task', task: task %>
          <% end %>
        </div>
        <div class=" vertical-grey ps-5 ms-3 ">
          <h3 class="title-h3 mb-5"><%= image_tag "arrow.svg", class: "arrow-h3" %>By date</h3>
          <% @tasks.order(:due_date).each do |task|  %>
            <%= render 'tasks/task', task: task %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
