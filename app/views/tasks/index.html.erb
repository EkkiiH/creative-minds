<div class="container my-5 mx-3 p-5">
  <h1>View of all my tasks</h1>

  <div class="row">
    <div class="m-3">
            <%= link_to new_without_plan_path,
                class: 'btn font-turquoise px-2' do %>
                <i class="fa-solid fa-plus"></i>&nbsp add a new task
            <% end %>
    </div>

    <div class="col-lg-4 col-md-12">
      <h2>Last added</h2>
      <% @tasks.each do |task|  %>
        <div class="m-3 d-flex flex-column"><%= render 'tasks/task', task: task %></div>
      <% end %>
    </div>

    <div class="col-lg-4 col-md-6">
      <h2>By Priority</h2>
      <% @tasks.order(:priority).reverse.each do |task|  %>
        <div class="m-3 d-flex flex-column"><%= render 'tasks/task', task: task %></div>
      <% end %>
    </div>

    <div class="col-lg-4 col-md-6">
      <h2>By date</h2>
      <% @tasks.order(:due_date).each do |task|  %>
        <div class="m-3 d-flex flex-column"><%= render 'tasks/task', task: task %></div>
      <% end %>
    </div>

  </div>
</div>
